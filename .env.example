# Environment variables for SeedFlow Knowledge Management Tool
# Copy this file to .env and set your actual values

# OpenAI API Configuration (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Claude API Configuration (Optional)
CLAUDE_API_KEY=sk-ant-your-claude-api-key-here

# Application Configuration
KNOWLEDGE_APP_PORT=8080
AI_SERVICE_PORT=8001
AI_SERVICE_HOST=ai-service

# Directory Configuration
DATA_DIR=./data
LOG_DIR=./logs
EXPORTS_DIR=./exports
BACKUPS_DIR=./backups
CONFIG_DIR=./config

# Security Configuration
SECURITY_ENCRYPTION_ENABLED=false
SECURITY_FILE_PERMISSIONS=600

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
CACHE_ENABLED=true
CACHE_SIZE=100MB

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=30
LOG_COMPRESS=true

# Database Configuration
DATABASE_PATH=./data/knowledge.db
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=30d